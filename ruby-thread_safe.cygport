ruby_thread_safe_CONTENTS="--exclude=examples ${RUBYGEM_INSTDIR#/} ${RUBYGEM_SPEC#/}"
ruby_thread_safe_doc_CONTENTS="${RUBYGEM_DOCDIR#/} ${RUBYGEM_INSTDIR#/}/examples/"
